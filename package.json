{
  "name": "dev-to-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "eslint . --cache --cache-location .cache/eslint/ --max-warnings=0",
    "lint:staged": "lint-staged",
    "test": "pnpm -r test",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx}": [
      "eslint --cache --cache-location .cache/eslint/ --max-warnings=0 --fix"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.3.0",
    "@rslib/core": "^0.19.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/node": "^22.10.7",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "esbuild": "^0.27.2",
    "eslint": "^9.3.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "globals": "^17.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^16.2.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.51.0",
    "vite": "^5.4.11"
  }
}
